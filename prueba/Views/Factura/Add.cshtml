@model prueba.Models.FormsViewModel.PaqueteViewModel
@{
    ViewBag.Title = "Cargar Factura";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Factura", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("error", new { @class = "text-danger" })
            <div class="form-group">
                <label>Cliente</label>
                <select class="form-control" name="IdCliente" id="IdCliente">
                    @foreach (var c in ViewBag.Clientes)
                    {
                        <option value="@c.Id">@c.Nombre @c.Apellido, @c.Dni</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Paquete</label>
                <select class="form-control" name="IdPaquete" id="IdPaquete">
                    @foreach (var p in ViewBag.Paquetes)
                    {
                        <option value="@p.Id">@p.Descripcion</option>
                    }
                </select>
            </div>
            <button class="btn btn-block btn-success" type="submit">Agregar</button>
        }
    </div>
</div>
