<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de la aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Inicio", "Index", "Home")</li>
        <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                    @*<li>@Html.ActionLink("Lista","Index","Pais")</li>*@
                    <li class="dropdown" role="presentation">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">Paises y Provincias</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver Paises", "Index", "Pais")</li>
                            <li>@Html.ActionLink("Ver Provincias", "Index", "Provincia")</li>
                        </ul>
                    </li>
                    <li class="dropdown" role="presentation">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">Empresas</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver Empresas", "Index", "Empresa")</li>
                            <li>@Html.ActionLink("Ver Razon Social", "Index", "RazonSocial")</li>
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("Paquetes", "Index", "Paquete", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li>
                        @Html.ActionLink("Clientes", "Index", "Cliente", new { area = "" }, new { @class = "navbar-brand" })
                    </li>
                    <li class="dropdown" role="presentation">
                        <a class="dropdown-toggle" role="button" data-toggle="dropdown">Facturas</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Ver Facturas", "Index", "Factura")</li>
                            <li>@Html.ActionLink("Realizar Venta", "Add", "Factura")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
